#!/usr/bin/env ruby
# encoding: utf-8
# tested with ruby 1.9.3

module Ec1 module Users

class Update
require 'ec1/users/toolkit/standard.rb'
include Ec1::Users::Toolkit::Standard

def initialize
  @git_path = File.expand_path(__FILE__ + '/../../')
end

def run
  system "cd #{@git_path}; git pull"
end

end

end end

Ec1::Users::Update.new.run

