#!/usr/bin/env ruby
# encoding: utf-8
# tested with ruby 1.9.3

#TODO: big refactoring...
date = Time.now
puts date
mu_path = %x"echo ~/.ec1/00mu".chomp!
sync_autocommit_mu_path = "#{mu_path}/00sync/autocommit"
sync_autocommit_logs_filepath = "#{mu_path}/00logs/autocommit"
system "echo #{date} >> #{sync_autocommit_logs_filepath}"
system "echo 'BUGGED' >> #{sync_autocommit_logs_filepath}"
repositories = (Dir.entries(sync_autocommit_mu_path) - %w{ . ..})
repositories.each {|repository|
  repository_path = "#{sync_autocommit_mu_path}/#{repository}"
  begin
    echo "(cd #{repository_path} ; git commit -am '${date})"
    #system "(cd #{repository_path} ; git commit -am '${date})"
    echo "echo \"autocommitted >> #{repository_path}\" >> #{sync_autocommit_logs_filepath}"
    #system "echo \"autocommitted >> #{repository_path}\" >> #{sync_autocommit_logs_filepath}"
  rescue
    echo "echo \"ERROR >> #{repository_path}\" >> #{sync_autocommit_logs_filepath}"
    #system "echo \"ERROR >> #{repository_path}\" >> #{sync_autocommit_logs_filepath}"
  end
}

